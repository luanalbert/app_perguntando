<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %></h1>
        <p> <%= pergunta.descricao %></p>
        <hr>

        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label class="mb-3">Resposta</label>
            <textarea placeholder="Digte sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id%>">            
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <div class="card mb-3">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include ('partials/footer.ejs') %>
</body>
